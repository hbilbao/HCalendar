<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project Calendar with Jar-in-Jar Loader">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="jar/Calendar.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="com.hcalendar.ui.InitScreenWindow"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ jcalendar-1.4.jar jgoodies-common-1.2.0.jar jgoodies-looks-2.4.1.jar junit-4.6.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="F:/desarrollo/CalendarWorkspace/Calendar/bin"/>
            <zipfileset dir="F:\desarrollo\CalendarWorkspace\Calendar\lib" includes="jcalendar-1.4.jar"/>
            <zipfileset dir="F:\desarrollo\CalendarWorkspace\Calendar\lib" includes="jgoodies-common-1.2.0.jar"/>
            <zipfileset dir="F:\desarrollo\CalendarWorkspace\Calendar\lib" includes="jgoodies-looks-2.4.1.jar"/>
            <zipfileset dir="F:\desarrollo\CalendarWorkspace\Calendar\lib" includes="junit-4.6.jar"/>
        </jar>
    </target>
</project>
